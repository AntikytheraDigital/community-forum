[
  {
    "description": "create valid post",
    "uri": "/posts",
    "jwt": "{\"username\": \"testauthor\"}",
    "data": {
      "boardName": "testBoard23",
      "username": "testauthor",
      "content": "contentTest 123",
      "title": "titleTest 123"
    },
    "expectedStatus": 201,
    "expectedMessage": "Post created successfully"
  },
  {
    "description": "empty boardName",
    "uri": "/posts",
    "jwt": "{\"username\": \"testauthor\"}",
    "data": {
      "boardName": "",
      "username": "testauthor",
      "content": "contentTest 123",
      "title": "titleTest 123"
    },
    "expectedStatus": 400,
    "expectedMessage": "Post creation failed",
    "expectedError": "boardName is required"
  },
  {
    "description": "empty username",
    "uri": "/posts",
    "jwt": "{\"username\": \"testauthor\"}",
    "data": {
      "boardName": "testBoard23",
      "username": "",
      "content": "contentTest 123",
      "title": "titleTest 123"
    },
    "expectedStatus": 400,
    "expectedMessage": "Post creation failed",
    "expectedError": "username is required"
  },
  {
    "description": "empty content",
    "uri": "/posts",
    "jwt": "{\"username\": \"testauthor\"}",
    "data": {
      "boardName": "testBoard23",
      "username": "testauthor",
      "content": "",
      "title": "titleTest 123"
    },
    "expectedStatus": 400,
    "expectedMessage": "Post creation failed",
    "expectedError": "post must have content in the body"
  },
  {
    "description": "empty title",
    "uri": "/posts",
    "jwt": "{\"username\": \"testauthor\"}",
    "data": {
      "boardName": "testBoard23",
      "username": "testauthor",
      "content": "contentTest 123",
      "title": ""
    },
    "expectedStatus": 400,
    "expectedMessage": "Post creation failed",
    "expectedError": "title is required"
  },
  {
    "description": "title too short",
    "uri": "/posts",
    "jwt": "{\"username\": \"testauthor\"}",
    "data": {
      "boardName": "testBoard23",
      "username": "testauthor",
      "content": "contentTest 123",
      "title": "T"
    },
    "expectedStatus": 400,
    "expectedMessage": "Post creation failed",
    "expectedError": "title must be between 3 and 30 characters long"
  }
]