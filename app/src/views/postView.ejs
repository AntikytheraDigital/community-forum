<!doctype html>
<html lang="en">
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/public/app.css"/>

</head>
<body>
<%- include('partials/navbar') %>
<div>
    <h1 class="welcome">
        Post ID: <%= title %>
    </h1>
</div>
<div class="error-message">
    <% if (typeof post.error !== 'undefined') { %>
        <p>
            Error: <%= post.error %>
        </p>
    <% } %>
</div>
<div class="comment-list">
    <% if (typeof post.error == 'undefined') { %>
        <% post.forEach(function(comment) { %>
            <%- include('partials/commentCard', comment) %>
    <% }); } %>
</div>
</body>
</html>