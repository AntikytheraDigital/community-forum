<!doctype html>
<html lang="en">
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/public/app.css"/>
    <link rel="stylesheet" href="/public/postPage.css"/>

</head>
<body>
<%- include('partials/navbar') %>
<div class="error-message">
    <% if (post.error) { %>
        <p>
            Error: <%= post.error %>
        </p>
    <% } %>
</div>

<% if (!post.error) { %>
    <div class="post-card">
        <a href="/board/<%= post.boardID %>" class="post-card-board">board/<%= post.boardID %></a>
        <div class="post-card-info">
            <span class="post-card-author">Posted by <%= post.authorID %></span>
            <span class="post-card-date">at <%= post.timestamp %></span>
        </div>
        <h1 class="post-title"><%= post.title %></h1>
        <p><%= post.content %></p>
    </div>
    <div>
        <h2 class="comment-title">Comments</h2>
    </div>
    <div class="comment-add">
        <h1 class="comment-title-card">Write Comment</h1>
        <form action="/post/<%= post.postID %>/comment" method="post">
            <textarea class="input-textarea" name="content" id="content" placeholder="Comment"></textarea>
            <button class="input-button" type="submit">Add Comment</button>
        </form>
    </div>
    <div class="comment-list">
        <% if (post.comments) { %>
            <% post.comments.forEach(function(comment) { %>
                <%- include('partials/commentCard', comment) %>
        <% }); } %>
    </div>
<% } %>
</body>
</html>