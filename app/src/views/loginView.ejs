<!doctype html>
<html lang="en">
<head>
    <title>Login</title>
    <link rel="stylesheet" href="/public/app.css"/>
    <link rel="stylesheet" href="/public/auth.css"/>
</head>
<body>
<%- include('partials/navbar') %>

<div class="auth">
    <h2>Login to Account</h2>
    <div>
        <a href="/oauth/login" class="auth-google">Login with Google</a>
    </div>
    <div class="auth-or">
        <hr class="auth-bar"/>
        <span><b>OR</b></span>
        <hr class="auth-bar"/>
    </div>
    <form action="/login" method="post">
        <div>
            <label>
                Username:
                <input class="input-field" type="text" name="username" required/>
            </label>
        </div>
        <div>
            <label>
                Password:
                <input class="input-field" type="password" name="password" required/>
            </label>
        </div>
        <div class="error-message">
            <% if (typeof error !== 'undefined') { %>
                <p>
                    Error: <%= error %>
                </p>
            <% } %>
        </div>
        <div class="success-message">
            <% if (typeof success !== 'undefined') { %>
                <p>
                    <%= success %>
                </p>
            <% } %>
        </div>

        <div>
            <input class="input-button" type="submit" value="Login"/>
        </div>
    </form>
</div>
</body>
</html>