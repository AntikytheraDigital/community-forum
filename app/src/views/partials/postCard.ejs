<div class="post-card">
    <a class="post-card-board">board/<%= boardID %></a>
    <div class="post-card-info">
        <span class="post-card-author">Posted by <%= username %></span>
        <span class="post-card-date">at <%= date %></span>
    </div>
    <h3 class="post-card-title">
        <a><%= title %></a>
    </h3>
    <div class="post-card-content">
        <p><%= content %></p>
    </div>
</div>
