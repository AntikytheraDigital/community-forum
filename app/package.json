{
  "name": "community-forum",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "esbuild": "0.19.3",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "nodemon": "3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "react-scripts": "5.0.1",
    "web-vitals": "3.4.0"
  },
  "scripts": {
    "build:client": "esbuild src/index.js --bundle --outfile=dist/bundle.js --loader:.js=jsx",
    "build:server": "esbuild src/server.js --bundle --outfile=build/server.js --platform=node --loader:.js=jsx",
    "build": "npm run build:client && npm run build:server",
    "start": "node ./build/server.js"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
